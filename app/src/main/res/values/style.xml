<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Общий стиль для TextInputLayout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/bgTextInput</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="startIconTint">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>