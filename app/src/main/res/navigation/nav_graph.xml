<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/OnBoardFragment">


    <fragment
        android:id="@+id/OnBoardFragment"
        android:name="com.example.mynots2.ui.on_board.OnBoardFragment"
        android:label="OnBoardFragment"
        tools:layout="@layout/fragment_on_board">


        <action
            android:id="@+id/action_OnBoardFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/action_OnBoardFragment_to_AuthFragment"
            app:destination="@id/authFragment2" />

    </fragment>
    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.mynots2.ui.main_fragment.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">


        <action
            android:id="@+id/action_MainFragment_to_createNotesFragment"
            app:destination="@id/createNotesFragment" />
    </fragment>
    <fragment
        android:id="@+id/createNotesFragment"
        android:name="com.example.mynots2.ui.create_notes.CreateNotesFragment"
        android:label="fragment_create_notes"
        tools:layout="@layout/fragment_create_notes" >
        <action
            android:id="@+id/action_createNotesFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment2"
        android:name="com.example.mynots2.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" />
</navigation>

